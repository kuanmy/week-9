{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Internet User Rate",
    "width": 800,
    "height": 600,
    "projection": {
      "type": "equirectangular"
    },
    "layer": [
      {
        "data": {
          "url": "https://github.com/kuanmy/week-9/blob/main/js/ne_110m_admin_0_countries.topojson",
          "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white",
          "strokeWidth": 0.5
        }
      },
      {
        "data": {
          "url": "https://github.com/kuanmy/week-9/blob/main/js/ne_110m_admin_0_countries.topojson",
          "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
        },
        "transform": [
          {
            "lookup": "properties.ADMIN",
            "from": {
              "data": {
                "url": "../data/continent_country_internet.csv"
              },
              "key": "country",
              "fields": ["internetuserate"]
            }
          },
          {
            "filter": "datum.internetuserate > 0"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 0.5
        },
        "encoding": {
          "color": {
            "title": "User Rate",
            "field": "internetuserate",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [20, 60],
              "range": ["#fdbe85", "#fd8d3c", "#e6550d"]
          }
        },
        "tooltip": [
          {"field": "properties.ADMIN", "type": "nominal", "title": "Country"},
          {"field": "internetuserate", "type": "quantitative", "title": "Internet User Rate", "format": "d"}
        ]
      }
      }
    ] 
  }
  
