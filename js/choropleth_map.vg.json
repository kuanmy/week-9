{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Internet Users (per 100 people)",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://kuanmy.github.io/week-9/js/ne_110m_admin_0_countries.topojson",
    "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "color": "lightgray",
        "stroke": "black"
      },
      "encoding": {
        "fillOpacity": {
          "condition": {"param": "select", "value": 1},
          "value": 0.4
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0.1
        },
        "tooltip": [
          {"field": "properties.ADMIN", "type": "nominal", "title": "Country"}
        ]
      }
    },
    {
      "params": [
        {
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        },
        {"name": "select", "select": "point"}
      ],
      "transform": [
        {
          "lookup": "properties.ADMIN",
          "from": {
            "data": {
              "url": "https://kuanmy.github.io/week-9/data/continent_country_internet.csv"
            },
            "key": "country",
            "fields": ["internetuserate"]
          }
        },
        {
          "filter": "datum.internetuserate > 0"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "title": "Internet Use Rate",
          "field": "internetuserate",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [20, 60],
            "range": ["#fee8c8", "#fdbb84", "#e34a33"]
          },
          "legend": {
            "orient": "none",
            "legendX": 20,
            "legendY": 20
          }
        },
        "fillOpacity": {
          "condition": {"param": "select", "value": 1},
          "value": 0.4
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0.1
        },
        "tooltip": [
          {"field": "properties.ADMIN", "type": "nominal", "title": "Country"},
          {"field": "internetuserate", "type": "quantitative", "title": "Internet User Rate", "format": "d"}
        ]
      }
    }
  ] 
}
  
